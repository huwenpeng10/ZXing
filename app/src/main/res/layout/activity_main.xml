<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".qrcodecard.MainActivity">
    <com.example.merxu.zxing.view.MyLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </com.example.merxu.zxing.view.MyLayout>
    <com.example.merxu.zxing.view.MyLayout
        android:id="@+id/number_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </com.example.merxu.zxing.view.MyLayout>
    <com.example.merxu.zxing.view.MyLayout
        android:id="@+id/company_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </com.example.merxu.zxing.view.MyLayout>
    <com.example.merxu.zxing.view.MyLayout
        android:id="@+id/position_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </com.example.merxu.zxing.view.MyLayout>
    <com.example.merxu.zxing.view.MyLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    </com.example.merxu.zxing.view.MyLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv"
            android:layout_centerInParent="true"
            android:layout_width="140dp"
            android:layout_height="140dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="@dimen/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="clickedCreate"
            android:layout_marginLeft="@dimen/distance"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_code"/>
        <Button
            android:onClick="clickedScanner"
            android:layout_marginRight="@dimen/distance"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scanner_code"/>

    </RelativeLayout>

</LinearLayout>
